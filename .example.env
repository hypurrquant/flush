# App URL (required for production)
NEXT_PUBLIC_URL=https://your-domain.com

# OnchainKit / Coinbase Developer Platform
NEXT_PUBLIC_ONCHAINKIT_API_KEY=your-onchainkit-api-key
NEXT_PUBLIC_PROJECT_ID=your-cdp-project-id

# Base RPC (optional - uses default if not set)
NEXT_PUBLIC_BASE_RPC_URL=https://mainnet.base.org

# 0x API Configuration
NEXT_PUBLIC_ZEROEX_API_KEY=your-0x-api-key
NEXT_PUBLIC_FEE_RECIPIENT=0xYourWalletAddress

# Supabase (for swap tracking & rewards)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
